version: '3.8'

services:
  uptime-kuma:
    image: louislam/uptime-kuma:latest
    container_name: uptime-kuma
    restart: unless-stopped
    ports:
      - "3001:3001"
    volumes:
      - ./uptime-kuma/data:/app/data
    environment:
      - TZ=Europe/Berlin
    networks:
      - monitor-net

  ntfy:
    image: binwiederhier/ntfy:latest
    container_name: ntfy
    restart: unless-stopped
    ports:
      - "8080:80"
    volumes:
      - ./ntfy/data:/var/lib/ntfy
      - ./ntfy/config:/etc/ntfy
    environment:
      - TZ=Europe/Berlin
    command: serve
    networks:
      - monitor-net

  dozzle:
    image: amir20/dozzle:latest
    container_name: dozzle
    restart: unless-stopped
    ports:
      - "8888:8080"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
    environment:
      - TZ=Europe/Berlin
      - DOZZLE_LEVEL=info
      - DOZZLE_TAILSIZE=300
    networks:
      - monitor-net

networks:
  monitor-net:
    driver: bridge

volumes:
  uptime-kuma-data:
  ntfy-data:
